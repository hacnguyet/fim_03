<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" namespace="/" extends="struts-default">
		<action name="index" class="home.IndexAction" method="index">
			<result>/index.jsp</result>
		</action>
	</package>	
	<package name="user" namespace="/user" extends="default">
		<action name="login" class="user.action.LoginAction" method="login">
			<result name="not_logged_in">/login/login.jsp</result>
			<result name="success" type="redirect">/index</result>
			<result name="error">/login/login_error.jsp</result>
		</action>		
		<action name="logout" class="user.action.LoginAction" method="logout">
			<result name="success" type="redirect">/index</result>
		</action>
	</package>
</struts>	